%h2 Students

- @students.each do |student|
  %p
    %b= student.name
  %p
    Category:
    - if student.category 
      = student.category.name
  %p= student.name

  = link_to "Edit", edit_admin_student_path(student)
  = link_to "Destroy", admin_student_path(student), :confirm => "Are you sure?", :method => :delete
  %hr

%p= link_to 'New student', new_admin_student_path
%p= link_to 'Back', admin_root_path

